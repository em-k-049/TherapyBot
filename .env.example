# Frontend Configuration
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Backend Configuration
BACKEND_PORT=8000

# Security
JWT_SECRET=your-jwt-secret-key-here-min-32-chars
SESSION_SECRET=your-session-secret-key-here

# Database Configuration
POSTGRES_DB=therapybot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:your-secure-password@postgres:5432/therapybot

# Redis Configuration
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# Google Cloud Vertex AI
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/app/secrets/gcp-credentials.json

# Email Configuration (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# Escalation Contacts
CONSULTANT_EMAIL=consultant@therapybot.com
CONSULTANT_PHONE=+1234567890

# Monitoring (Optional)
FLOWER_PORT=5555
FLOWER_USER=admin
FLOWER_PASSWORD=admin

# Encryption
ENCRYPTION_PASSWORD=your-secure-encryption-password
ENCRYPTION_SALT=your-unique-salt-value
ENCRYPTION_KEY=your-base64-encryption-key